<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Orders</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212; /* Dark background */
      color: #ffffff; /* Light text color */
      font-family: Arial, sans-serif; /* Consistent font */
    }
    h1 {
      margin-bottom: 20px; /* Space below heading */
    }
    .btn-primary {
      background-color: #2a2a2a; /* Dark background for primary button */
      border-color: #444; /* Dark border */
    }
    .btn-primary:hover {
      background-color: #444; /* Lighter background on hover */
    }
    .btn-warning {
      background-color: #b57c00; /* Warning button color */
      border-color: #b57c00; /* Warning border color */
    }
    .btn-warning:hover {
      background-color: #d69f00; /* Lighter background on hover */
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1>Orders</h1>
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Status</th>
          <th>Total Price</th>
          <th>Address</th>
          <th>Date</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody id="orders-table-body">
        <!-- Order rows will be inserted here dynamically -->
      </tbody>
      
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td><%= order.user.name %> (<%= order.user.email %>)</td>
            <td>$<%= order.totalPrice.toFixed(2) %></td>
            <td><%= order.status %></td>
            <td><%=order.address %></td>
            <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
            <td>
              <a href="/admin/orders/<%= order._id %>" class="btn btn-primary btn-sm">View Details</a>
              <a href="/admin/orders/<%= order._id %>/edit" class="btn btn-warning btn-sm">Edit Status</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>