<style>
      body {
      background-color: #121212; /* Dark background */
      color: #ffffff; /* Light text color */
      font-family: Arial, sans-serif; /* Consistent font */
    }
    h1 {
      margin-bottom: 20px; /* Space below heading */
    }
    .btn-dark {
      background-color: #2a2a2a; /* Dark background for primary button */
      border-color: #444; /* Dark border */
    }
    .btn-dark:hover {
      background-color: #444; /* Lighter background on hover */
    }
    .btn-warning {
      background-color: #b57c00; /* Warning button color */
      border-color: #b57c00; /* Warning border color */
    }
    .btn-warning:hover {
      background-color: #d69f00; /* Lighter background on hover */
    }
    .pagination .page-item.active .page-link {
        background-color: #444; /* Active page background */
        border-color: #666; /* Active page border */
    }
    .pagination .page-link {
        color: #ffffff; /* Page link text color */
        background-color: #2a2a2a; /* Dark background for links */
    }
    .pagination .page-link:hover {
        background-color: #444; /* Lighter background on hover */
    }
    </style>
    <h2><%- pageTitle %></h2>
    <a href="/admin/categories/create" class="btn btn-dark text-white btn-info">Create New Category</a>
    <table class="table table-dark">
    <thead>
      <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Description</th>
          <th>Image</th>
          <th>Edit</th>
          <th>Delete</th>
      </tr>
  </thead>
  <tbody>
      <% for(let index = 0; index < categories.length; index++) { %>
          <tr>
              <td><%= categories[index]._id %></td>
              <td><%= categories[index].name %></td>
              <td><%= categories[index].description %></td>
              <td>
                  <% if(categories[index].image) { %>
                      <img src="<%= categories[index].image %>" alt="<%= categories[index].name %>" style="width: 50px; height: 50px;" />
                  <% } else { %>
                      No Image
                  <% } %>
              </td>
              <td>
                  <a href="/admin/categories/edit/<%= categories[index]._id %>" class="btn btn-warning">Edit</a>
              </td>
              <td>
                  <a href="/admin/categories/delete/<%= categories[index]._id %>" class="btn btn-danger">Delete</a>
              </td>
          </tr>
      <% } %>
  </tbody>
</table>
